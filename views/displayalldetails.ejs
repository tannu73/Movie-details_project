<style>
   .maincontainer{
       background: gainsboro;
       width: 100vw;
       height: 100vh;
       display: flex;
       justify-content: center;
       align-items: center;
   }
   .box{
       background: #fff;
       width: 90%;
       height: 70%;
       border-radius: 10px;
       padding-left: 20px;
       padding-right: 20px;
       overflow-y: scroll;
       
   }
   .heading{
       font-size: 22px;
       font-weight: bold;
       font-family: Oswald;
       padding: 10px;
       letter-spacing: 1;
       
   }
   .image {width:48px ;
           height:48px ;
           padding: 5px;
           padding-top: 8px;

   }
   .headingdiv{
       display: flex;
       align-items: center;
       flex-direction: row;
       justify-content: space-between;
   }
   .formdiv{
       margin: 5px;
   }
   .gap{margin-bottom: 10px; }
   .btnstyle{
       display: flex;
       align-items: center;
       justify-content: center;
   }
</style>

<html>
   <head>
      <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
   </head>

   <div class="maincontainer">
      <div class="box">
      <div class="headingdiv">
      <div style="display: flex;">
      <div><img src="/images/movie.png" class="image"></div>
      <div class="heading">Movie Registeration</div>
      </div>

      <div><a href="/movies/movie_interface" style="text-decoration: none;"><img src="/images/add.png" style="width: 40px;"></a></div>
      </div>
    <% 
       if (data.length==0)
       {  %>
         <%=message %>
      <% } else { %>
      <table class="table table-striped">
         <tr>
            <th>#</th>
            <th>State Id/State Name</th>
            <th>City Id/City Name </th>
            <th>Cinema Id/Cinema Name</th>
            <th>Screen Id/Screen Name</th>
            <th>Movie Id/Movie Name</th>
            <th>Status</th>
            <th>Description</th>
            <th>Picture</th>
            <th>Edit</th>
            
          </tr>

      
     <% data.map((item,i)=>{ %>
      <tr><td><%=i+1 %></td>
      <td><%=item.stateid %>/<%=item.statename%></td>
      <td><%=item.cityid %>/<%=item.cityname%></td>
      <td><%=item.cinemaid %>/<%=item.cinemaname%></td>
      <td><%=item.screenid %>/<%=item.screenname%></td>
      <td><%=item.movieid %>/<%=item.moviename %></td>
      <td><%=item.status %></td>
      <td><%=item.description %></td>
      <td><a href="/movies/displaypictureforedit?movieid=<%=item.movieid %>&moviename=<%=item.moviename%>&picture=<%=item.moviepicture%>" style="text-decoration: none;"><img src="/images/<%=item.moviepicture %>" style="width: 60px; height: 60px; border-radius: 30px;"></a></td>
      <td><a href="/movies/displayforedit?movieid=<%=item.movieid %>" style="text-decoration: none;"><img src="/images/edit.png" style="width: 25px; height: 25px;"></a></td></tr>


      <%  }) %>
     </table>
      <% } %>
      </div>
   </div>
</html>